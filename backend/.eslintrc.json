{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:node/recommended",
        "plugin:promise/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "node/no-unsupported-features/es-syntax": "off",
        "comma-dangle": "off",
        "allowIndentationTabs": false,
        "indent": ["error", "tab"],
        "semi": [2, "always"]
    }
}
